{
  "Dhcp4": {
    "renew-timer": 600,
    "rebind-timer": 1200,
    "valid-lifetime": 86400,
    "interfaces-config": {
      "interfaces": [ "enp1s0" ]
    },
    "lease-database": {
      "type": "memfile",
      "lfc-interval": 3600
    },
    "expired-leases-processing": {
      "reclaim-timer-wait-time": 10,
      "flush-reclaimed-timer-wait-time": 25,
      "hold-reclaimed-time": 3600,
      "max-reclaim-leases": 100,
      "max-reclaim-time": 250,
      "unwarned-reclaim-cycles": 5
    },
    "option-data": [
      { "name": "routers", "data": "10.10.10.10" },
      { "name": "domain-name-servers", "data": "8.8.8.8,1.1.1.1" },
      { "name": "domain-name", "data": "sne25.nl" }
    ],
    "subnet4": [
      {
        "subnet": "10.10.10.0/24",
        "pools": [
          { "pool": "10.10.10.100 - 10.10.10.200" }
        ]{% if dhcp_reservations | default([]) | length > 0 %},
        "reservations": [
{% for host in dhcp_reservations -%}
          {
            "hw-address": "{{ host.mac | upper }}",
            "ip-address": "{{ host.ip }}",
            "hostname": "{{ host.hostname | default('host' ~ loop.index) }}"
          }{% if not loop.last %},{% endif %}
{% endfor -%}
        ]
        {% endif %}
      }
    ]
  },
  "Logging": {
    "loggers": [
      { "name": "kea-dhcp4", "severity": "INFO", "debuglevel": 0, "flush": true }
    ]
  }
}
